		"front": "pnpm -F @packages/front",
		"mobile": "pnpm -F @packages/mobile",
		"build": "pnpm -r build && pnpm bundle",
		"build:api": "pnpm -F @packages/api build && pnpm bundle:api",
		"build:back": "pnpm -F @packages/back build && pnpm bundle:back",
