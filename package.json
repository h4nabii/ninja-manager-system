		"build:mobile": "pnpm -F @packages/front build && pnpm bundle:mobile",
		"bundle": "node scripts/bundle.mjs",
		"bundle:api": "node scripts/bundle-api.mjs",
		"bundle:back": "node scripts/bundle-back.mjs",
		"bundle:front": "node scripts/bundle-front.mjs",
		"bundle:mobile": "node scripts/bundle-mobile.mjs"
	},
	"devDependencies": {
		"@types/archiver": "^6.0.3",
		"archiver": "^7.0.1",
		"dayjs": "^1.11.13",
